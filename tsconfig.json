{
  "compilerOptions": {
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "typeRoots": ["node_modules/@types", "src/types"],
    "outDir": "./dist"
  },
  "include": ["./server/**/*"],
  "exclude": ["node_modules"]
}
