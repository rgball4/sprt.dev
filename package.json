{
  "name": "sprt.dev",
  "version": "0.0.1",
  "private": false,
  "license": "MIT",
  "engineStrict": true,
  "engines": {
    "node": "14.15.3",
    "yarn": "1.22.5"
  },
  "scripts": {
    "start": "nodemon",
    "pretty": "prettier --write {server,public}/**/**.js",
    "build": "npm-run-all clean transpile",
    "server": "node ./dist-server/bin/www",
    "prod": "NODE_ENV=production npm-run-all build server",
    "dev": "NODE_ENV=development npm-run-all build server",
    "transpile": "babel ./server --out-dir dist-server",
    "clean": "rimraf dist-server",
    "test": "jest"
  },
  "dependencies": {
    "cookie-parser": "~1.4.5",
    "debug": "~4.3.1",
    "express": "~4.17.1",
    "morgan": "~1.10.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "@babel/cli": "^7.13.0",
    "@babel/core": "^7.13.8",
    "@babel/preset-env": "^7.13.8"
  },
  "devDependencies": {
    "jest": "^26.6.3",
    "prettier": "^2.2.1"
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
