{
  "name": "sprt.dev",
  "version": "0.0.1",
  "license": "MIT",
  "engines": {
    "node": ">=14.15.3",
    "yarn": ">=1.22.10"
  },
  "scripts": {
    "start": "node ./dist/bin/www",
    "dev": "NODE_ENV=development npm-run-all build start",
    "start:dev": "nodemon",
    "pretty": "prettier --write {server,public}/**/**.js",
    "lint": "eslint '{public,server}/**/*.js'",
    "build": "npm-run-all clean transpile",
    "transpile": "babel ./server --out-dir dist",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@babel/cli": "^7.13.0",
    "@babel/core": "^7.13.8",
    "@babel/plugin-transform-runtime": "^7.13.8",
    "@babel/preset-env": "^7.13.8",
    "axios": "^0.21.1",
    "cookie-parser": "^1.4.5",
    "debug": "^4.3.1",
    "express": "^4.17.1",
    "jade": "^1.11.0",
    "jsdom": "^16.4.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "table": "^6.0.7"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.20.0",
    "eslint-plugin-jest": "^24.1.5",
    "husky": "4",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0"
  },
  "nodemonConfig": {
    "exec": "yarn dev",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && pretty-quick --staged"
    }
  }
}
